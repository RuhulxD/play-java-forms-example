# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.VideoJPAController.index




# Applications


GET     /apps/get/:appid/:catType/                  controllers.AppController.getCategoriesWithList(appid:String, catType:Int, start:Int=0, limit:Int=10)
GET     /apps/get/:appid/:catType/:start/:limit     controllers.AppController.getCategoriesWithList(appid:String, catType:Int, start:Int, limit:Int)
GET     /apps                                       controllers.AdminPanel.createApplication
GET     /apps/delete                                controllers.AdminPanel.deleteApplication
POST    /apps                                       controllers.AdminPanel.createApplication
GET     /apps/get/:appid                            controllers.AppController.getCategories(appid:String)

# Category

GET     /cats/:appid                      controllers.AdminPanel.createCategory(appid:String)
POST    /cats/:appid                      controllers.AdminPanel.createCategory(appid:String)
GET    /cats/delete/:appid                      controllers.AdminPanel.deleteCategory(appid:String)

#playlist
GET     /playlist/add                   controllers.PlayListController.createPlayListForm
GET     /playlist/get/:id               controllers.PlayListController.getPlayList(id:String)


# Videos




GET     /jpalist                    controllers.VideoJPAController.getVideoList
GET     /jpaadd                    controllers.VideoJPAController.addVideo
GET     /search/:query                    controllers.VideoJPAController.search(query:String)
POST    /create                    controllers.VideoJPAController.createVideo
GET     /create                    controllers.VideoJPAController.createVideo


GET     /list                    controllers.VideoJPAController.viewVideoList


#GET     /search/:page/:sortBy/:order/:filter                   controllers.VideoController.pagedList(page: Integer,sortBy: String ,order: String , filter:  String )

#GET     /videos                    controllers.VideoController.listVideos
#POST    /videos                    controllers.VideoController.createVideos

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


GET /getPlayList/:id                       controllers.PlayListController.getPlayList(id:String)
GET /createPlayList/:id                    controllers.PlayListController.createPlayList(id:String)
