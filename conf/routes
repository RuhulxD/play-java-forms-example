# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.VideoJPAController.index


# Videos




GET     /jpalist                    controllers.VideoJPAController.getVideoList
GET     /jpaadd                    controllers.VideoJPAController.addVideo
GET     /search/:query                    controllers.VideoJPAController.search(query:String)
POST    /create                    controllers.VideoJPAController.createVideo
GET     /create                    controllers.VideoJPAController.createVideo


GET     /list                    controllers.VideoJPAController.viewVideoList


#GET     /search/:page/:sortBy/:order/:filter                   controllers.VideoController.pagedList(page: Integer,sortBy: String ,order: String , filter:  String )

#GET     /videos                    controllers.VideoController.listVideos
#POST    /videos                    controllers.VideoController.createVideos

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



GET /createPlayList/:id                    controllers.PlayListController.createPlayList(id:String)
GET /getPlayList/:id                       controllers.PlayListController.getPlayList(id:String)